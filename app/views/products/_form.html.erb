<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="field form-group">
    Nome do Produto <br/>
    <%= form.text_field :nome, placeholder:"Nome" %>
  </div>

  <div class ="field form-group">
    Data de Validade <br/>
    <%= form.date_field :validade, placeholder:"Data de validade" %>
  </div> <br/>

  <div class ="field form-group">
    <%= form.number_field :user_id, id: :user_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
