<%= form_with(model: [current_user, @ambiente, lembrete], local: true) do |form| %>
  <% if lembrete.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(lembrete.errors.count, "error") %> prohibited this lembrete from being saved:</h2>

      <ul>
        <% lembrete.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo, style: "display: block" %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :texto, style: "display: block" %>
    <%= form.text_field :texto %>
  </div>

  <div>
    <%= form.label :data_de_vencimento, style: "display: block" %>
    <%= form.datetime_field :expire_at, min: Time.now, step: 1 %>
  </div>

  <div>
    <%= form.label :prioridade, style: "display: block" %>
    <%= form.select :prioridade, [["Prioridade 1", "P1"], ["Prioridade 2", "P2"], ["Prioridade 3", "P3"], ["Prioridade 4", "P4"]], selected: "P1" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, value:current_user.email %>
  </div>
  <br>
  <div>
    <%= form.submit "Criar", class:"btn btn-secondary" %>
  </div>
<% end %>
